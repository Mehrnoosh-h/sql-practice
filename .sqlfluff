[sqlfluff]
dialect = mysql
max_line_length = 120
exclude_rules = LT02,LT01,LT12,AL01,AM05,ST09,CP02,CP01

[sqlfluff:rules:layout.indent]
indent_width = 4

# keep keywords flexible while we clean up; we can re-enable later
[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = any

[sqlfluff:rules:capitalisation.identifiers]
extended_capitalisation_policy = any
